<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:paddingBottom="25dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@mipmap/csulb_pyramid"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="center">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Talk with anyone in Long Beach while you're here! \n Join the envionrment"
                android:gravity="center"
                android:textSize="24dp"
                />
            <Button
                android:id="@+id/createUsernameButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_username"
                android:minWidth="245dp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/button_yellow_outline"/>
            <Button
                android:id="@+id/anonButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_black_outline"
                android:minWidth="245dp"
                android:text="@string/anon"/>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>